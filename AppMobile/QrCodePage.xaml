<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMobile.QrCodePage"
             BackgroundColor="{StaticResource BackgroundColor}">

    <ContentPage.Resources>
        <ResourceDictionary Source="esources/Styles/StylesApp.xaml" />
    </ContentPage.Resources>

    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Label Text="Bienvenue," />
            <Label x:Name="StudentNameLabel" TextColor="{StaticResource SecondaryColor}" FontAttributes="Bold" />
        </HorizontalStackLayout>
        <Image x:Name="QrCodeImage" />
        <Button Text="Générer QRCode" Clicked="OnGenerateQrCodeClicked" />
    </VerticalStackLayout>
</ContentPage>
